<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- LinearLayout for Search and Grid -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="707dp"
        android:layout_above="@+id/footer"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Search EditText -->
        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="366dp"
            android:layout_height="49dp"
            android:autofillHints=""
            android:background="@drawable/rounded_edit_text"
            android:drawableStart="@drawable/search"
            android:hint="Search"
            android:inputType="text"
            android:padding="12dp"
            android:textColor="#000000" />

        <!-- ScrollView for scrollable content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- GridLayout with 4 rows and 3 columns -->
            <GridLayout
                android:id="@+id/imageGridLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:horizontalSpacing="0dp"
                android:padding="0dp"
                android:rowCount="4"
                android:verticalSpacing="0dp">

                <!-- Row 1 -->
                <ImageView
                    android:layout_width="125dp"
                    android:layout_height="151dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_margin="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/coat1" />

                <ImageView
                    android:layout_width="125dp"
                    android:layout_height="151dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_margin="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/coat2" />

                <ImageView
                    android:layout_width="125dp"
                    android:layout_height="151dp"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:layout_margin="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/summer3" />

                <!-- Row 2 -->
                <ImageView
                    android:layout_width="125dp"
                    android:layout_height="151dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_margin="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/summer4" />

                <ImageView
                    android:layout_width="125dp"
                    android:layout_height="151dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_margin="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/summer5" />

                <ImageView
                    android:layout_width="125dp"
                    android:layout_height="151dp"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:layout_margin="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user" />

                <!-- Row 3 -->
                <ImageView
                    android:layout_width="125dp"
                    android:layout_height="151dp"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_margin="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/summer6" />

                <ImageView
                    android:layout_width="125dp"
                    android:layout_height="151dp"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_margin="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/summer2" />

                <ImageView
                    android:layout_width="125dp"
                    android:layout_height="151dp"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:layout_margin="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/summer" />

                <!-- Row 4 -->
                <ImageView
                    android:layout_width="125dp"
                    android:layout_height="151dp"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:layout_margin="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile_image" />

                <ImageView
                    android:layout_width="125dp"
                    android:layout_height="151dp"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:layout_margin="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image1" />

                <ImageView
                    android:layout_width="125dp"
                    android:layout_height="151dp"
                    android:layout_row="3"
                    android:layout_column="2"
                    android:layout_margin="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image1" />

            </GridLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Footer Layout -->
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/homeIcon"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:contentDescription="@string/home_icon"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/searchIcon"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:contentDescription="@string/search_icon"
            android:src="@drawable/search" />

        <ImageView
            android:id="@+id/reelIcon"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:contentDescription="@string/reel_icon"
            android:src="@drawable/reel_logo" />

        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:contentDescription="@string/profile_icon"
            android:src="@drawable/profile_icon" />
    </LinearLayout>

</RelativeLayout>
